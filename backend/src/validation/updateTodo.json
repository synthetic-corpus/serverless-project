{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Update Todo Validator",
    "Description": "Validates input for UpdateTodos.",
    "type": "object",
    "properties": {
      "name": {
        "type": "string"
      },
      "dueDate": {
        "type": "string"
      },
      "done": {
          "type": "boolean"
      }
    },
    "required": ["name", "dueDate", "done"],
      "additionalProperties": {
        "properties":{
            "attachmentUrl":{
                "type":"string"
            }
        }
    }
  }
